<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.pranabchakma.mcqprepartion.Done">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background_action_bar">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">
                        <TextView
                            android:id="@+id/scoretitle"
                            android:text="SCORE CARD"
                            android:textSize="20dp"
                            android:textColor="#b6cce4"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ce1a57aa"
                            android:paddingTop="7dp"
                            android:paddingBottom="8dp"
                            />
                        <View
                            android:layout_below="@+id/scoretitle"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#8e579bb9" />
                        <TextView
                            android:layout_below="@+id/scoretitle"
                            android:id="@+id/score"
                            android:text="0 out of 0"
                            android:textSize="16dp"
                            android:textColor="#b6cce4"
                            android:gravity="center_horizontal"
                            android:padding="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/donelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layoutAnimation="@anim/layout_animation_fall_down"
            android:layout_centerInParent="true"
            android:background="#5a739bb7"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
        </android.support.v7.widget.RecyclerView>
</android.support.design.widget.CoordinatorLayout>
